<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VOWsLauncher"
    xmlns:cxaml="clr-namespace:VOWsLauncher.CustomXAML">


    <Style TargetType="{x:Type cxaml:ThemedImage}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type cxaml:ThemedImage}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">

                            <Image Source="{TemplateBinding CurrentSource}"
                                   Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                   MinWidth="{TemplateBinding MinWidth}" MinHeight="{TemplateBinding MinHeight}"
                                   MaxWidth="{TemplateBinding MaxWidth}" MaxHeight="{TemplateBinding MaxHeight}"
                                   IsEnabled="{TemplateBinding IsEnabled}"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            
        </Style.Setters>
    </Style>
</ResourceDictionary>
