<Window x:Class="VOWs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VOWs"
        mc:Ignorable="d"
        Title="VOWs" Height="450" Width="800"
        WindowState="Maximized">

    <Grid Style="{StaticResource RootFrame}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.075*" MaxHeight="30"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.05*" MaxWidth="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.05*" MaxWidth="30"/>
        </Grid.ColumnDefinitions>

        <Button Style="{StaticResource ImageButton}"
                Margin="0,2,0,0">
            <Image Source="\Resources\Images\VOWsuite-logos_white.png"
                   Width="50" Height="50"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Button>

        

    </Grid>


</Window>
